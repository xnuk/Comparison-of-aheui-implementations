#!/usr/bin/env node
const path = process.argv[2]
if (!path) process.exit(1)

const { readFileSync, createWriteStream } = require('fs')

const file = readFileSync(path, 'utf8')

const {
	transpile,
	ModuleKind: {CommonJS, ESNext},
	ScriptTarget,
} = require('typescript')

const hashbang = file.trim().startsWith('#!/')

const maybeOutput = process.argv[3]
const output = maybeOutput
	? createWriteStream(maybeOutput, {
		encoding: 'utf8',
		mode: hashbang ? 0o755 : 0o644,
	})
	: process.stdout

output.write(
	transpile(
		file + (hashbang ? '\nexport = 0' : '')
			+ '\n//\n// This file is automatically generated from '
			+ path
			+ '\n',
		{
			target: ScriptTarget.ESNext,
			module: hashbang ? CommonJS : ESNext,
		}
	),
)